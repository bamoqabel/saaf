<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="partner_ledger_saaf_inherit" inherit_id="account_dynamic_reports.partner_ledger">
        <xpath expr="//table[hasclass('pims_report_line_table')]//thead//t[1]//tr//th[@colspan='5']" position="replace">
            <th colspan="4" class="text-center">Partner</th>
        </xpath>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//tr//td[@colspan='5']" position="replace">
            <td colspan="4">
                <span style="color: white;" t-esc="'..'"/>
                <span t-esc="Ledger_data[line]['name']"/>&#160;&#160;&#160;&#160;<span t-esc="Ledger_data[line]['mobile']"/>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//tr//td[@colspan='5']" position="replace">
            <td colspan="4" class="text-right">
                <span>Initial Balance</span>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t[3]//tr//td[@colspan='5']" position="replace">
            <td colspan="4" class="text-right">
                <span>Ending Balance</span>
            </td>
        </xpath>


        <xpath expr="//table[hasclass('pims_report_line_table')]//thead//t[2]//tr//th[2]" position="replace"/>
        <xpath expr="//table[hasclass('pims_report_line_table')]//thead//t[2]//tr//th[2]" position="replace"/>
        <xpath expr="//table[hasclass('pims_report_line_table')]//thead//t[2]//tr//th[2]" position="attributes">
            <attribute name="style">width:20%;text-align:left;text-align:center;</attribute>
        </xpath>
        <xpath expr="//table[hasclass('pims_report_line_table')]//thead//t[2]//tr//th[2]" position="after">
            <th style="text-align:left;">Delivery Address</th>
        </xpath>

        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//t//tr//td[2]" position="replace"/>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//t//tr//td[2]" position="replace"/>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//t//tr//td[2]" position="attributes">
            <attribute name="style">width:20%;text-align:left;text-align:center;</attribute>
        </xpath>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//t//tr//td[3]" position="replace"/>
        <xpath expr="//table[hasclass('pims_report_line_table')]//t//t//t//t//tr//td[2]" position="after">
            <td style="width:30%;"><t t-esc="sub_line.get('delivery_address')"/></td>
            <td style="width:30%;"><t t-esc="sub_line.get('ref')"/></td>
        </xpath>
    </template>

</odoo>
